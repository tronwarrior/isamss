<Window x:Class="CustomerForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Customer" Height="214" Width="348">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*" />
            <ColumnDefinition Width="26*" />
        </Grid.ColumnDefinitions>
        <Label Content="Name" Height="24" HorizontalAlignment="Left" Margin="16,19,0,0" Name="Label1" VerticalAlignment="Top" />
        <TextBox Height="24" HorizontalAlignment="Left" Margin="91,19,0,0" Name="txtTitle" VerticalAlignment="Top" Width="209" />
        <Label Content="Description" Height="24" HorizontalAlignment="Left" Margin="16,52,0,0" Name="Label2" VerticalAlignment="Top" />
        <TextBox AcceptsReturn="True" AcceptsTab="False" Height="65" HorizontalAlignment="Left" Margin="91,54,0,0" MaxLines="10" Name="txtDescription" VerticalAlignment="Top" Width="209" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="144,137,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="225,137,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
