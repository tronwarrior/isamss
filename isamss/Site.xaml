<Window x:Class="SiteForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Site" Height="213" Width="291" Icon="/isamss;component/Images/add.png">
    <Grid>
        <Label Content="Site Name" Height="28" HorizontalAlignment="Left" Margin="8,12,0,0" Name="Label1" VerticalAlignment="Top" Width="65" />
        <Label Content="Address" Height="28" HorizontalAlignment="Left" Margin="8,46,0,0" Name="Label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="79,12,0,0" Name="txtSiteName" VerticalAlignment="Top" Width="171" />
        <TextBox Height="70" HorizontalAlignment="Left" Margin="79,48,0,0" Name="txtSiteLocation" VerticalAlignment="Top" Width="171" MaxLines="4" AcceptsReturn="True" TextWrapping="Wrap" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="94,138,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="175,138,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
