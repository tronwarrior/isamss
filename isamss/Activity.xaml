<Window x:Class="ActivityForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Activity" Height="473" Width="538" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" Icon="/isamss;component/Images/sport_8ball.png">
    <Grid>
        <GroupBox Header="Observations" Height="218" HorizontalAlignment="Left" Margin="9,159,0,0" Name="GroupBox1" VerticalAlignment="Top" Width="499">
            <Grid>
                <ListView ItemsSource="{Binding}" Height="158" HorizontalAlignment="Left" Margin="6,6,0,0" Name="lstvwObservations" VerticalAlignment="Top" Width="474">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Header="Description" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Noncompliance}" Header="Noncompliance?" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Weakness}" Header="Weakness?" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Content="New" Height="23" HorizontalAlignment="Left" Margin="6,170,0,0" Name="btnNewObservation" VerticalAlignment="Top" Width="75" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Activity Type(s)" Height="134" HorizontalAlignment="Left" Margin="161,10,0,0" Name="GroupBox2" VerticalAlignment="Top" Width="347">
            <Grid>
                <Label Content="Covered by this Activity" Height="23" HorizontalAlignment="Right" Margin="0,7,6,0" Name="Label4" VerticalAlignment="Top" Width="152" />
                <ListView Height="67" HorizontalAlignment="Right" Margin="0,33,7,0" Name="lstvwThisActivityClasses" VerticalAlignment="Top" Width="152" ToolTip="Double-click item to move to &quot;Remove from this Activity&quot; list">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Title}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <Label Content="Types" Height="23" HorizontalAlignment="Left" Margin="11,7,0,0" Name="Label2" VerticalAlignment="Top" Width="152" />
                <ListView Height="67" HorizontalAlignment="Right" Margin="0,33,172,0" Name="lstvwActivityClasses" VerticalAlignment="Top" Width="152" ToolTip="Double-click item to move to &quot;Apply to this Activity&quot; list">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Title}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="433,394,0,0" Name="btn_save" TabIndex="6" VerticalAlignment="Top" Width="75" IsEnabled="False" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="351,394,0,0" Name="btn_cancel" TabIndex="7" VerticalAlignment="Top" Width="75" />
        <GroupBox Header="Activity Date" Height="134" HorizontalAlignment="Left" Margin="12,10,0,0" Name="GroupBox3" VerticalAlignment="Top" Width="143">
            <Grid>
                <my:DatePicker HorizontalAlignment="Left" Margin="6,33,0,0" Name="dtActivityDate" VerticalAlignment="Top" Width="119" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
