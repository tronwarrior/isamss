                <Label Content="Attachment" Height="28" HorizontalAlignment="Left" Margin="6,324,0,0" Name="Label1" VerticalAlignment="Top" Width="106" />
            </Grid>
        </GroupBox>
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="306,420,0,0" Name="btn_save" TabIndex="8" VerticalAlignment="Top" Width="75" IsEnabled="False" />
