<Window x:Class="ObservationForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Observation" Height="580" Width="560" Icon="/isamss;component/Images/zoom.png" xmlns:my="clr-namespace:isamss">
    <Grid>
        <GroupBox Header="Disposition" Height="108" HorizontalAlignment="Left" Margin="12,392,0,0" Name="GroupBox1" VerticalAlignment="Top" Width="143">
            <Grid>
                <CheckBox Content="Noncompliance" Height="16" HorizontalAlignment="Left" Margin="17,36,0,0" Name="chkNoncompliance" VerticalAlignment="Top" />
                <CheckBox Content="Weakness" Height="16" HorizontalAlignment="Left" Margin="17,14,0,0" Name="chkWeakness" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Description" Height="198" HorizontalAlignment="Left" Margin="12,12,0,0" Name="GroupBox2" VerticalAlignment="Top" Width="516">
            <Grid>
                <TextBox Height="145" HorizontalAlignment="Left" Margin="12,17,0,0" Name="txtDescription" VerticalAlignment="Top" Width="486" />
            </Grid>
        </GroupBox>
        <GroupBox Header="CMMI Process Areas" Height="170" HorizontalAlignment="Left" Margin="12,216,0,0" Name="GroupBox3" VerticalAlignment="Top" Width="516">
            <Grid>
                <ListView Height="100" HorizontalAlignment="Left" Margin="77,35,0,0" Name="ListView1" VerticalAlignment="Top" Width="120" />
                <ListView Height="100" HorizontalAlignment="Left" Margin="309,35,0,0" Name="ListView2" VerticalAlignment="Top" Width="120" />
            </Grid>
        </GroupBox>
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="453,506,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,506,91,0" Name="btnCancel" VerticalAlignment="Top" Width="75" />
        <GroupBox Header="Attachment" Height="108" HorizontalAlignment="Left" Margin="160,392,0,0" Name="GroupBox4" VerticalAlignment="Top" Width="368">
            <Grid>
                <my:TStackPanelAttachment HorizontalAlignment="Left" Margin="2,2,0,0" x:Name="TStackPanelAttachment1" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
